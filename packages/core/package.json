{
  "name": "@bedrock-ui/core",
  "version": "2.2.13",
  "description": "Bedrock UI Core",
  "files": [
    "lib",
    "sass"
  ],
  "module": "lib/esm/index.js",
  "main": "lib/cjs/index.js",
  "types": "lib/cjs/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build": "pnpm rm:build && pnpm build:sass && pnpm build:cjs && pnpm build:esm",
    "build:cjs": "tsc --project tsconfig.build-cjs.json && tsc-alias -p tsconfig.build-cjs.json",
    "build:esm": "tsc --project tsconfig.build-esm.json && tsc-alias -p tsconfig.build-esm.json",
    "build:sass": "node ./scripts/copy-sass.mjs",
    "build-storybook": "storybook build",
    "css-size": "node ./scripts/css-size.mjs",
    "dev": "concurrently \"npm run sass:watch\" \"npm run storybook\"",
    "rm:build": "rimraf css lib sass",
    "storybook": "storybook dev -p 6006",
    "typecheck": "tsc --noEmit",
    "sass:watch": "sass --watch ./src/sass/bedrock-ui.scss css/bedrock-ui.css --style compressed"
  },
  "author": "Matthew Wolfe",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.0",
    "@storybook/addon-actions": "^7.0.0-rc.1",
    "@storybook/addon-essentials": "^7.0.0-rc.1",
    "@storybook/addon-interactions": "^7.0.0-rc.1",
    "@storybook/addon-links": "^7.0.0-rc.1",
    "@storybook/client-api": "^7.0.0-rc.1",
    "@storybook/react": "^7.0.0-rc.1",
    "@storybook/react-webpack5": "^7.0.0-rc.1",
    "@tabler/icons-react": "^2.9.0",
    "@types/react": "^18.0.28",
    "babel-loader": "^9.1.2",
    "bytes": "^3.1.2",
    "concurrently": "^7.6.0",
    "fs-extra": "^11.1.0",
    "gzip-size": "^7.0.0",
    "prettier": "^2.8.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^4.4.0",
    "sass": "^1.59.2",
    "storybook": "^7.0.0-rc.1",
    "tsc-alias": "^1.8.3",
    "typescript": "^4.9.5"
  },
  "peerDependencies": {
    "react": "^17 || ^18"
  },
  "dependencies": {
    "clsx": "^1.2.1"
  }
}
