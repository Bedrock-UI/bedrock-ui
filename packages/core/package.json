{
  "name": "@bedrock-ui/core",
  "version": "2.2.1",
  "description": "Bedrock UI Core",
  "files": [
    "lib",
    "sass"
  ],
  "module": "lib/esm/index.js",
  "main": "lib/cjs/index.js",
  "types": "lib/cjs/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build": "pnpm rm:build && pnpm build:sass && pnpm build:cjs && pnpm build:esm",
    "build:cjs": "tsc --project tsconfig.build-cjs.json && tsc-alias -p tsconfig.build-cjs.json",
    "build:esm": "tsc --project tsconfig.build-esm.json && tsc-alias -p tsconfig.build-esm.json",
    "build:sass": "node ./scripts/copy-sass.mjs",
    "build-storybook": "build-storybook",
    "css-size": "node ./scripts/css-size.mjs",
    "dev": "concurrently \"npm run sass:watch\" \"npm run storybook\"",
    "rm:build": "rimraf css lib sass",
    "storybook": "start-storybook -p 6006",
    "typecheck": "tsc --noEmit",
    "sass:watch": "sass --watch ./src/sass/bedrock-ui.scss css/bedrock-ui.css --style compressed"
  },
  "author": "Matthew Wolfe",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@storybook/addon-actions": "^6.5.14",
    "@storybook/addon-essentials": "^6.5.14",
    "@storybook/addon-interactions": "^6.5.14",
    "@storybook/addon-links": "^6.5.14",
    "@storybook/builder-webpack4": "^6.5.14",
    "@storybook/client-api": "^6.5.14",
    "@storybook/manager-webpack4": "^6.5.14",
    "@storybook/react": "^6.5.14",
    "@types/react": "^18.0.26",
    "babel-loader": "^9.1.0",
    "bytes": "^3.1.2",
    "concurrently": "^7.6.0",
    "fs-extra": "^11.1.0",
    "gzip-size": "^7.0.0",
    "prettier": "^2.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "sass": "^1.57.1",
    "tsc-alias": "^1.8.2",
    "typescript": "^4.9.4"
  },
  "peerDependencies": {
    "react": "^17 || ^18"
  },
  "dependencies": {
    "clsx": "^1.2.1"
  }
}
